{
  "info": {
    "_postman_id": "bandhan-api-integrated",
    "name": "Bandhan API â€“ Integrated (Frontend)",
    "description": "APIs under /bandhan used by the frontend: auth, events, organizers, test.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080", "type": "string" },
    { "key": "organizerId", "value": "1", "type": "string" },
    { "key": "userId", "value": "1", "type": "string" },
    { "key": "eventId", "value": "1", "type": "string" },
    { "key": "registrationId", "value": "1", "type": "string" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"organizer@example.com\",\n  \"password\": \"password123\"\n}" },
            "url": "{{baseUrl}}/bandhan/auth/login"
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password1!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}" },
            "url": "{{baseUrl}}/bandhan/auth/register"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"your-refresh-token\"\n}" },
            "url": "{{baseUrl}}/bandhan/auth/logout"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\"\n}" },
            "url": "{{baseUrl}}/bandhan/auth/forgot-password"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"token\": \"reset-token-from-email\",\n  \"newPassword\": \"NewPassword1!\"\n}" },
            "url": "{{baseUrl}}/bandhan/auth/reset-password"
          }
        },
        {
          "name": "Verify",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/bandhan/auth/verify"
          }
        }
      ]
    },
    {
      "name": "Test",
      "item": [
        { "name": "Test",
          "request": { "method": "GET", "url": "{{baseUrl}}/bandhan/test" } },
        { "name": "Health",
          "request": { "method": "GET", "url": "{{baseUrl}}/bandhan/test/health" } }
      ]
    },
    {
      "name": "Events",
      "item": [
        { "name": "Get All Events",
          "request": { "method": "GET", "url": "{{baseUrl}}/bandhan/events" } },
        {
          "name": "Get Event by ID",
          "request": { "method": "GET", "url": "{{baseUrl}}/bandhan/events/{{eventId}}" }
        },
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Speed Dating - Mumbai\",\n  \"description\": \"Meet singles in a fun setup.\",\n  \"eventDate\": \"2025-03-15T18:00:00\",\n  \"venue\": \"Grand Hotel\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"maxParticipants\": 50,\n  \"registrationFee\": 500\n}" },
            "url": { "raw": "{{baseUrl}}/bandhan/events?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Updated Event\",\n  \"description\": \"Updated.\",\n  \"eventDate\": \"2025-03-20T18:00:00\",\n  \"venue\": \"Grand Hotel\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"maxParticipants\": 60,\n  \"registrationFee\": 600\n}" },
            "url": { "raw": "{{baseUrl}}/bandhan/events/{{eventId}}?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "{{eventId}}"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/{{eventId}}?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "{{eventId}}"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Update Event Status",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/{{eventId}}/status?status=ONGOING&organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "{{eventId}}", "status"], "query": [{ "key": "status", "value": "ONGOING" }, { "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Get Events by Organizer",
          "request": { "method": "GET", "url": "{{baseUrl}}/bandhan/events/organizer/{{organizerId}}" }
        },
        {
          "name": "Get My Events (Organizer)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/my-events?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "my-events"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Register for Event (User)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/{{eventId}}/register?userId={{userId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "{{eventId}}", "register"], "query": [{ "key": "userId", "value": "{{userId}}" }] }
          }
        },
        {
          "name": "Unregister from Event (User)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/{{eventId}}/register?userId={{userId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "{{eventId}}", "register"], "query": [{ "key": "userId", "value": "{{userId}}" }] }
          }
        },
        {
          "name": "Get Event Registrations",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/{{eventId}}/registrations?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "{{eventId}}", "registrations"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Get My Event Registrations (Organizer)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/registrations/my-events?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "registrations", "my-events"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Update Payment Status",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/registrations/{{registrationId}}/payment-status?paymentStatus=PAID&organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "registrations", "{{registrationId}}", "payment-status"], "query": [{ "key": "paymentStatus", "value": "PAID" }, { "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Get Participant Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/registrations/{{registrationId}}/participant-profile?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "registrations", "{{registrationId}}", "participant-profile"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Update Attendance",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/registrations/{{registrationId}}/attendance?attended=true&organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "registrations", "{{registrationId}}", "attendance"], "query": [{ "key": "attended", "value": "true" }, { "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        },
        {
          "name": "Get Event Statistics",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/bandhan/events/statistics?organizerId={{organizerId}}", "host": ["{{baseUrl}}"], "path": ["bandhan", "events", "statistics"], "query": [{ "key": "organizerId", "value": "{{organizerId}}" }] }
          }
        }
      ]
    },
    {
      "name": "Organizers",
      "item": [
        {
          "name": "Get Organizer Profile",
          "request": { "method": "GET", "url": "{{baseUrl}}/bandhan/organizers/{{organizerId}}/profile" }
        },
        {
          "name": "Update Organizer Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"firstName\": \"Event\",\n  \"lastName\": \"Organizer\",\n  \"phone\": \"+919876543210\",\n  \"city\": \"Pune\",\n  \"state\": \"Maharashtra\",\n  \"aboutMe\": \"About me.\"\n}" },
            "url": "{{baseUrl}}/bandhan/organizers/{{organizerId}}/profile"
          }
        }
      ]
    }
  ]
}
